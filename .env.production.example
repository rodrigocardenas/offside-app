# Plantilla de archivo .env para producción
# Copiar a: /var/www/html/offside-app/.env
# Actualizar valores según tu configuración

APP_NAME="Offside Club"
APP_ENV=production
APP_KEY=base64:GENERATED_BY_KEY_GENERATE_COMMAND
APP_DEBUG=false
APP_URL=https://app.offsideclub.es

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=offside_app
DB_USERNAME=offside
DB_PASSWORD=STRONG_PASSWORD_HERE

# Cache & Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Mail (ajustar según proveedor)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@offsideclub.es"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (si usas S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Firebase
FIREBASE_PROJECT_ID=offside-dd226
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nKEY_CONTENT_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY_ID=key_id_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@offside-dd226.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
API_FOOTBALL_KEY=your_api_football_key_here

# Slack
SLACK_WEBHOOK_ALERTS=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Telescope (Debug - disabled in production but keep for local/staging)
TELESCOPE_ENABLED=false

# Sanctum
SANCTUM_STATEFUL_DOMAINS=app.offsideclub.es
SANCTUM_GUARD=web

# Misc
TRUSTED_PROXIES=*
ASSET_URL=https://app.offsideclub.es
TIMEZONE=America/Mexico_City
